{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./src",
    "sourceMap": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "lib": ["es5", "es6", "dom", "scripthost"],
    "types": ["node"],
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
  ]
}
